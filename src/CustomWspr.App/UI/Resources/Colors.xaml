<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Accent Colors -->
    <SolidColorBrush x:Key="AccentBorderBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="AccentFillBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="AccentFillHoverBrush" Color="#106EBE"/>
    <SolidColorBrush x:Key="AccentFillPressedBrush" Color="#005A9E"/>

    <!-- Overlay Background -->
    <SolidColorBrush x:Key="OverlayBackgroundBrush" Color="#1F1F1F" Opacity="0.95"/>
    <SolidColorBrush x:Key="OverlayBackgroundDarkBrush" Color="#202020" Opacity="0.95"/>

    <!-- Waveform Colors -->
    <SolidColorBrush x:Key="WaveformBackgroundBrush" Color="#2B2B2B"/>
    <SolidColorBrush x:Key="WaveformFillBrush" Color="#0078D4"/>

    <!-- State Indicators -->
    <SolidColorBrush x:Key="StateIndicatorBrush" Color="#10893E"/>
    <SolidColorBrush x:Key="StateIndicatorRecordingBrush" Color="#D13438"/>
    <SolidColorBrush x:Key="StateIndicatorPausedBrush" Color="#FF8C00"/>
    <SolidColorBrush x:Key="StateIndicatorProcessingBrush" Color="#0078D4"/>

    <!-- Button Colors -->
    <SolidColorBrush x:Key="RecordButtonBrush" Color="#D13438"/>
    <SolidColorBrush x:Key="RecordButtonHoverBrush" Color="#A52A2D"/>
    <SolidColorBrush x:Key="RecordButtonPressedBrush" Color="#8B2325"/>

    <SolidColorBrush x:Key="SubtleButtonBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="SubtleButtonHoverBrush" Color="#F3F3F3"/>
    <SolidColorBrush x:Key="SubtleButtonPressedBrush" Color="#E5E5E5"/>

</ResourceDictionary>
